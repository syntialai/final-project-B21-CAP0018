<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <TextView
            android:id="@+id/text_view_booking_data_patient_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/patient_data_label"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/text_view_booking_user_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/patient_name_label"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorTextMedium" />

        <TextView
            android:id="@+id/text_view_booking_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            tools:text="Patient Name" />

        <TextView
            android:id="@+id/text_view_booking_user_birth_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/patient_birth_date_label"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorTextMedium" />

        <TextView
            android:id="@+id/text_view_booking_user_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            tools:text="Patient Name" />

        <TextView
            android:id="@+id/text_view_booking_user_email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/patient_email_label"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorTextMedium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_view_booking_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"
            tools:text="Patient Name" />

        <TextView
            android:id="@+id/text_view_booking_user_phone_number_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/patient_phone_number_label"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorTextMedium" />

        <TextView
            android:id="@+id/text_view_booking_user_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            tools:text="Patient Name" />

        <TextView
            android:id="@+id/text_view_booking_user_no_ktp_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/patient_no_ktp_label"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorTextMedium" />

        <TextView
            android:id="@+id/text_view_booking_user_no_ktp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            tools:text="Patient Name" />

        <TextView
            android:id="@+id/text_view_booking_user_address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/patient_address_label"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorTextMedium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_view_booking_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"
            tools:text="Patient Name" />

        <TextView
            android:id="@+id/text_view_booking_user_gender_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/patient_gender_label"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorTextMedium" />

        <TextView
            android:id="@+id/text_view_booking_user_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            tools:text="Patient Name" />

        <TextView
            android:id="@+id/text_view_booking_user_referral_letter_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/patient_referral_letter_label"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorTextMedium" />

        <com.bangkit.team18.qhope.ui.widget.ReferralLetterCard
            android:id="@+id/card_booking_user_referral_letter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:image_type="PDF" />

    </LinearLayout>
</com.google.android.material.circularreveal.cardview.CircularRevealCardView>