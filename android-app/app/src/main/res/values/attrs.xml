<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Additional color for text. -->
    <attr name="colorTextMedium" format="color" />
    <attr name="description" format="string" />
    <attr name="colorSurfaceDarker" format="color" />

    <!-- Styleable -->
    <declare-styleable name="EmptyStateView">
        <attr name="image" format="reference" />
        <attr name="title" format="string" />
        <attr name="description" />
    </declare-styleable>

    <declare-styleable name="ReferralLetterCard">
        <attr name="image_type" format="enum">
            <enum name="PDF" value="0" />
            <enum name="IMAGE" value="1" />
        </attr>
        <attr name="file_name" format="string" />
    </declare-styleable>

    <declare-styleable name="BannerInfo">
        <attr name="description" />
        <attr name="button_visible" format="boolean" />
        <attr name="button_label" format="string" />
    </declare-styleable>
</resources>