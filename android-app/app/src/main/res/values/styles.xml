<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Behaviour.QHope.ScrollingViewBehaviour" parent="">
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <!-- Shape Appearances. -->
    <style name="ShapeAppearance.QHope.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">@dimen/dp_16</item>
    </style>

    <style name="ShapeAppearance.QHope.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/dp_8</item>
    </style>

    <!-- View -->
    <style name="View.QHope.Separator" parent="">
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@drawable/drawable_search_view_background</item>
    </style>

    <!-- Widget -->
    <style name="Widget.QHope.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/drawable_rounded_button_background</item>
        <item name="android:padding">@dimen/dp_12</item>
    </style>

    <style name="Widget.QHope.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.QHope.Chip.Info.Small" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="chipMinTouchTargetSize">@dimen/dp_20</item>
    </style>

    <style name="Widget.QHope.Chip.Info.Small.Green" parent="Widget.QHope.Chip.Info.Small">
        <item name="android:textColor">@color/green_700</item>
        <item name="chipBackgroundColor">@color/green_100</item>
    </style>

    <style name="Widget.QHope.Chip.Info.Small.Red" parent="Widget.QHope.Chip.Info.Small">
        <item name="android:textColor">@color/red_700</item>
        <item name="chipBackgroundColor">@color/red_100_60</item>
    </style>

    <style name="Widget.QHope.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/drawable_search_view_background</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/search_view_hint_color</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:searchIcon">@drawable/ic_search</item>
        <item name="android:paddingStart">@dimen/dp_minus_4</item>
        <item name="android:queryBackground">@null</item>
    </style>

    <style name="Widget.QHope.SpinKit" parent="SpinKitView.Large">
        <item name="SpinKit_Color">?attr/colorPrimary</item>
        <item name="SpinKit_Style">CubeGrid</item>
    </style>

    <style name="Widget.QHope.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline3</item>
    </style>
</resources>